&НаКлиенте
Процедура РазобратьПараметрыСтроки(СтрокаПарамеровГолоса, ПараметрыГолоса)
	СтрокаПарамеровГолоса = Нрег(СтрокаПарамеровГолоса);
	УдалитьПробелыВСтроке(СтрокаПарамеровГолоса);
	ПозицияРавно = Найти(СтрокаПарамеровГолоса, "=");
	
	ТекГолос = Неопределено;
	ТекЭмоция = Неопределено;
	ТекЯзык = Неопределено;
	ТекСкорость = Неопределено;
	Если ПараметрыГолоса.Свойство("Голос") Тогда
		ТекГолос = ПараметрыГолоса.Голос;
	КонецЕсли;	 
	Если ПараметрыГолоса.Свойство("Эмоция") Тогда
		ТекЭмоция = ПараметрыГолоса.Эмоция;
	КонецЕсли;	 
	Если ПараметрыГолоса.Свойство("Язык") Тогда
		ТекЯзык = ПараметрыГолоса.Язык;
	КонецЕсли;	 
	Если ПараметрыГолоса.Свойство("Скорость") Тогда
		ТекСкорость = ПараметрыГолоса.Скорость;
	КонецЕсли;	 
	
	Если ПозицияРавно = 0 Тогда
		//Разделитель - запятая
		МассивПараметровГолоса = Ванесса.РазложитьСтрокуВМассивПодстрокКлиент(СтрокаПарамеровГолоса, ",");
		Если МассивПараметровГолоса.Количество() = 2 Тогда
			ТекГолос = МассивПараметровГолоса[0];
			ТекЭмоция = МассивПараметровГолоса[1];
		Иначе
			ТекГолос = МассивПараметровГолоса[0];
		КонецЕсли;
	Иначе
		МассивСтрок = Ванесса.РазложитьСтрокуВМассивПодстрокКлиент(СтрокаПарамеровГолоса, ";");
		Для Каждого СтрокаМассива Из МассивСтрок Цикл
			
			Если Лев(СтрокаМассива, 6) = "voice=" Тогда
				ТекГолос = Сред(СтрокаМассива,7);
			КонецЕсли;

			Если Лев(СтрокаМассива, 5) = "lang=" Тогда
				ТекЯзык = Сред(СтрокаМассива,6);
			КонецЕсли;
			
			Если Лев(СтрокаМассива, 8) = "emotion=" Тогда
				ТекЭмоция = Сред(СтрокаМассива,9);
			КонецЕсли;
			
			Если Лев(СтрокаМассива, 6) = "speed=" Тогда
				ТекСкорость = Число(Сред(СтрокаМассива,7));
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;

	ПараметрыГолоса.Вставить("Голос", ТекГолос);
	ПараметрыГолоса.Вставить("Эмоция", ТекЭмоция);
	ПараметрыГолоса.Вставить("Язык", ТекЯзык);
	ПараметрыГолоса.Вставить("Скорость", ТекСкорость);

КонецПроцедуры	


