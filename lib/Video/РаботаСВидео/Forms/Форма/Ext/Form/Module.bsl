	ХД.Добавить(Шаг3);
	Шаг4 = ХД.ХешСумма;
	
	ОПАД = Вычислить("ПолучитьБуферДвоичныхДанныхИзHexСтроки(СтрокаОПАД)");
	БуферШаг1 = Вычислить("ПолучитьБуферДвоичныхДанныхИзДвоичныхДанных(Шаг1)");
	ОПАД.ЗаписатьПобитовоеИсключительноеИли(0, БуферШаг1);
