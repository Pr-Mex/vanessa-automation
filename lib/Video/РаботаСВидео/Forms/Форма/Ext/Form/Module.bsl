		КонецЕсли;	 
		
	Иначе
		Ванесса.ЗаписатьЛогВЖРИнформация("ЗаписьВидеоВыполненияТестов",
			Ванесса.ПодставитьПараметрыВСтроку(Ванесса.Локализовать("Не найден файл <%1>"), ИмяФайлаВидеоИсходный));
