				Если ЗначениеЗаполнено(Шаг.ТекстИнструкция) Тогда
					Текст = Шаг.ТекстИнструкция;
				Иначе	
					Текст = Шаг.Имя;
				КонецЕсли;	 	
			ИначеЕсли Текст = "<НЕ ОЗВУЧИВАТЬ>" Тогда 
				Текст = "";		
			Иначе
				Шаг.ТекстИнструкция = Текст;
			КонецЕсли;	 
			
			Шаг.Вставить("ТекстИнструкция", Текст);
