		КоличествоДанных = ДанныеКэшMp3.Количество();

		Счетчик = 1;

		ИмяФайла = ДобавитьНулей(КоличествоДанных+Счетчик,8) + ".mp3";
		ТекГолос = ПараметрыГолоса.Голос;
