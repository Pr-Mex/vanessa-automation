			iamToken = Результат.iamToken;
			ПараметрыВидео.Вставить("iamToken", iamToken);
			Возврат iamToken;
		КонецЕсли;
		
		ТекстСообщения = Ванесса.Локализовать("Не удалось получить токен.");
		ВызватьИсключение ТекстСообщения;
