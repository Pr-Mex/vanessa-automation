//Если "Истина" тогда
//@Тогда(Парам01)
Функция Условие(Знач Выражение,
                  ЧастьВыражения2 = Неопределено,
                  ЧастьВыражения3 = Неопределено,
                  ЧастьВыражения4 = Неопределено,
                  ЧастьВыражения5 = Неопределено,
                  ЧастьВыражения6 = Неопределено,
                  ЧастьВыражения7 = Неопределено) Экспорт
	
	Ванесса.СоединитьСтрокиЕслиЭтоВозможно(
		Выражение,
		ЧастьВыражения2,
		ЧастьВыражения3,
		ЧастьВыражения4,
		ЧастьВыражения5,
		ЧастьВыражения6,
		ЧастьВыражения7
	);
	
	
	ПолучилосьВычислить = Ложь;
	Если НЕ ПолучилосьВычислить Тогда
		Попытка
			ТекстИсключения = Неопределено;
			СтароеВыражение = Ванесса.ЗаменитьСлужебныеСимволыВВыраженииДляВычисления(
				Ванесса.ЗначениеПараметраТекущегоСценария(0));
			Результат = Ванесса.ВычислитьВнутреннееВыражение(СтароеВыражение, ТекстИсключения);
			ПолучилосьВычислить = Истина;
			Если Найти(СтароеВыражение,"""ОбъектКонтекст") > 0 Тогда
				ПолучилосьВычислить = Ложь;
			КонецЕсли;	 
		Исключение
			Результат = Выражение;
		КонецПопытки;
	КонецЕсли;	 
	
	Если НЕ ПолучилосьВычислить ИЛИ (ТипЗнч(Результат) <> Тип("Булево")) Тогда
		//Тогда нужно вычислить условие по новым правилам.
		Попытка
			ТекстИсключения = Неопределено;
			Результат = Ванесса.ВычислитьВнутреннееВыражение(Выражение, ТекстИсключения);
		Исключение
			Если НЕ ПолучилосьВычислить Тогда
				Результат = Выражение;
			КонецЕсли;	 
		КонецПопытки;
	КонецЕсли;	 
	
	Если ТипЗнч(Результат) <> Тип("Булево") Тогда
		Если ТекстИсключения <> Неопределено Тогда
			ВызватьИсключение ТекстИсключения;
		КонецЕсли;	 
		
		ТекстСообщения = Ванесса.ПолучитьТекстСообщенияПользователю("Не получилось вычислить выражение: %1");
		ТекстСообщения = СтрЗаменить(ТекстСообщения,"%1",Выражение);
		ВызватьИсключение ТекстСообщения;
	КонецЕсли;	 
	
	Если Результат Тогда
		Ванесса.УстановитьРезультатУсловия(Истина);
	Иначе	
		Ванесса.УстановитьРезультатУсловия(Ложь);
	КонецЕсли;	 
КонецФункции

