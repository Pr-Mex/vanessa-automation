			Продолжить;
		ИначеЕсли ТекСтрока.Тип = "Область" Тогда
			Если Лев(СокрЛ(ТекСтрока.Имя), 1) <> "*" И ПустаяСтрока(ТекСтрока.ДопТип) Тогда
				Ванесса.VanessaEditor.setLineStyle(ТекСтрока.НомерСтрокиВФиче, "", Истина, Ложь, Ложь);
				СтрокиНеявныхОбластей.Добавить(Новый Структура("НомерСтроки,ИдВиджета", ТекСтрока.НомерСтрокиВФиче, ""));
