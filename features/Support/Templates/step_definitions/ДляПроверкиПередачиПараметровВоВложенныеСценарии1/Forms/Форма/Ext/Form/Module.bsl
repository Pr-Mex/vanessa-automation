Процедура ВПеременнойКонтекстаНаходитсяЗначение(ИмяЗначения,НужноеЗначение) Экспорт
	ЗначениеКонтекста = Контекст[ИмяЗначения];
	Если ЗначениеКонтекста <> НужноеЗначение Тогда
		ТекстСообщения = "ИмяЗначения= <%1>, ожидали <%2> ,а получили <%3> ";
		ТекстСообщения = СтрЗаменить(ТекстСообщения,"%1",ИмяЗначения);
		ТекстСообщения = СтрЗаменить(ТекстСообщения,"%2",НужноеЗначение);
		ТекстСообщения = СтрЗаменить(ТекстСообщения,"%3",ЗначениеКонтекста);
		ВызватьИсключение ТекстСообщения;
	КонецЕсли;	 
