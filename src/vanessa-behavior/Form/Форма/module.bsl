            Куда   = СтрЗаменить(Куда,"/","\");
            Команда = "COPY """ + Откуда + """ """ + Куда + """";
        КонецЕсли;    

		Попытка
            Если ЭтоLinux Тогда 
                КомандаСистемы(Команда);
            Иначе 
                ВыполнитьКомандуОСБезПоказаЧерногоОкна(Команда);
            КонецЕсли;    
        Исключение
            Сообщить("КопироватьФайлКомандаСистемы:"+ОписаниеОшибки()+ " команда:"+Команда);
        КонецПопытки;
	Иначе
